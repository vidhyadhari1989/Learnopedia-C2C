<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0">

    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:padding="5dp"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            style="?android:textAppearanceSmall"
            android:text="Entroll"
            android:background="@color/login_btn_color"
            android:textColor="@color/white"
            android:id="@+id/entroll"
            />
        <TextView
            android:id="@+id/entroll_tv"
            android:layout_width="wrap_content"
            android:text="Entroll Payment forchat and reviews the access"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:paddingLeft="5sp"
            />

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#b7b3b3">


            <GridView
                android:id="@+id/subject_gridView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:columnWidth="100dp"
                android:drawSelectorOnTop="true"
                android:gravity="center"
                android:numColumns="3"
                android:stretchMode="columnWidth"
                android:verticalSpacing="3dp"
                android:horizontalSpacing="3dp"
                android:focusable="true"
                android:clickable="true"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>